# ================================================================
# Job Application System - Environment Variables Template
# ================================================================
# Copy this file to .env.local and fill in your actual values
# ================================================================

# ================================================================
# APPLICATION SETTINGS
# ================================================================
NODE_ENV=development
# Next.js dev server runs on port 3002 to avoid conflicts with other services
NEXT_PUBLIC_APP_URL=http://localhost:3002

# ================================================================
# DATABASE - LOCAL DOCKER
# ================================================================
# Note: Uses port 5434 to avoid conflict with local PostgreSQL on port 5432
DATABASE_URL=postgresql://postgres:localdev123@localhost:5434/jobapp

# ================================================================
# DATABASE - RAILWAY PRODUCTION (comment out for local development)
# ================================================================
# DATABASE_URL=your_railway_postgres_connection_string

# ================================================================
# AUTHENTICATION & SECURITY
# ================================================================
# Generate secrets using: openssl rand -base64 32
NEXTAUTH_URL=http://localhost:3001
NEXTAUTH_SECRET=generate_using_openssl_rand_base64_32
JWT_SECRET=generate_using_openssl_rand_base64_32

# ================================================================
# OPENAI API
# ================================================================
OPENAI_API_KEY=sk-proj-your-api-key-here

# ================================================================
# TELEGRAM BOT
# ================================================================
TELEGRAM_BOT_TOKEN=your_bot_token_from_botfather
TELEGRAM_USER_ID=your_telegram_user_id

# ================================================================
# GOOGLE CALENDAR API
# ================================================================
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# ================================================================
# EMAIL (Gmail)
# ================================================================
EMAIL_ADDRESS=your-email@gmail.com
EMAIL_PASSWORD=your_gmail_app_password
EMAIL_PROVIDER=gmail
IMAP_HOST=imap.gmail.com
IMAP_PORT=993
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587

# ================================================================
# POSTGREST API - LOCAL DOCKER
# ================================================================
# Note: PostgREST uses port 3001 to avoid conflict with Next.js dev server on port 3000
PGRST_DB_URI=postgresql://postgres:localdev123@localhost:5434/jobapp
PGRST_DB_SCHEMA=public
PGRST_DB_ANON_ROLE=web_anon
PGRST_JWT_SECRET=same_as_jwt_secret_above
POSTGREST_JWT_SECRET=same_as_jwt_secret_above
NEXT_PUBLIC_API_URL=http://localhost:3001

# ================================================================
# POSTGREST API - RAILWAY PRODUCTION (comment out for local)
# ================================================================
# NEXT_PUBLIC_API_URL=https://your-postgrest-service.up.railway.app

# ================================================================
# N8N WORKFLOW AUTOMATION - LOCAL DOCKER
# ================================================================
N8N_URL=http://localhost:5678
N8N_HOST=localhost
N8N_PORT=5678
N8N_PROTOCOL=http
N8N_WEBHOOK_URL=http://localhost:5678/webhook

# ================================================================
# N8N - RAILWAY PRODUCTION (comment out for local)
# ================================================================
# N8N_WEBHOOK_URL=https://your-n8n-service.up.railway.app/webhook

# ================================================================
# DEVELOPMENT TOOLS
# ================================================================
NEXT_TELEMETRY_DISABLED=1
LOG_LEVEL=debug
